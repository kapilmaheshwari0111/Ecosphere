<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#8692f7"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Lavender Background -->

    <!-- Challenge Name -->
    <TextView
        android:id="@+id/challengeNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Challenge Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/challengeProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Completed Count -->
    <TextView
        android:id="@+id/completedCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0/7" />

    <!-- Buttons for +, - and Upload Image in one row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <!-- Minus Button -->
        <Button
            android:id="@+id/minusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#EDE5E5"
            android:text="-"
            android:textColor="#0D0C0C" />

        <!-- Plus Button -->
        <Button
            android:id="@+id/plusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F2E9E9"
            android:text="+"
            android:textColor="#000" />

        <!-- Upload Image Button -->
        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F1F1"
            android:text="Upload Image"
            android:textColor="#000"
            android:textSize="8sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/challengeImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</LinearLayout>